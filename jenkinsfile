pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'Node 18', type: 'NodeJSInstallation'  // Reference the correct Node version
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/angular-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build Angular App') {
            steps {
                bat 'ng build --prod --output-path C:\\nginx\\html'  // Update the path if needed
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment complete. Angular app is now served by NGINX.'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
