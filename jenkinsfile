pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'Node 22', type: 'NodeJSInstallation' // 
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/ninja007/angular-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build Angular App') {
            steps {
                bat 'ng build --prod --output-path C:\\nginx\\html'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment complete. Restarting NGINX to serve the new build.'
                bat 'nginx -s reload'  // Reload Nginx to serve the new content
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
