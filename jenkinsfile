pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'NodeJS', type: 'NodeJSInstallation'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://gitlab.com/your-repo/your-project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Angular App') {
            steps {
                sh 'ng build --prod'
            }
        }

        stage('Deploy') {
            steps {
                sshPublisher(
                    publishers: [
                        sshPublisherDesc(
                            configName: 'YourServerConfig',
                            transfers: [
                                sshTransfer(
                                    sourceFiles: 'dist/**/*',
                                    remoteDirectory: '/var/www/html/your-angular-app'
                                )
                            ]
                        )
                    ]
                )
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
pipeline {
    agent any
    tools {
        nodejs 'NodeJS 16' // Ensure Node.js is configured in Jenkins
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo/angular-tour-of-heroes.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Angular App') {
            steps {
                sh 'ng build --prod'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                sh 'scp -r dist/angular-tour-of-heroes/* user@yourserver:/var/www/html/'
            }
        }
    }
}
