pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'node 18', type: 'NodeJSInstallation'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/ninja007-aws/angular-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build Angular App') {
            steps {
                bat 'ng build --prod --output-path C:/nginx/html'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment to local NGINX folder is complete.'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
