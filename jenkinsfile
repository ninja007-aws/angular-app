pipeline {
    agent any
    tools {
        // 
        nodejs 'Node'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/ninja007-aws/angular-app.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Install Angular CLI') {
            steps {
                script {
                    sh 'npm install -g @angular/cli@latest'
                }
            }
        }
        stage('Build Angular App') {
            steps {
                script {
                    sh 'ng build --prod'
                }
            }
        }
        stage('Deploy to Nginx') {
            steps {
                script {
                    sh 'cp -R dist/* /path/to/nginx/deployment/folder/'
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
