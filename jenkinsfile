pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'Node 18', type: 'NodeJSInstallation'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/ninja007-aws/angular-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Ensure that npm install is run inside a node block
                    bat 'npm install'
                }
            }
        }

        stage('Build Angular App') {
            steps {
                script {
                    // Build the app, ensure the path to build folder is correct
                    bat 'ng build --prod --output-path C:\\nginx\\html'  // Ensure the path is correct
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment complete. Restarting NGINX to serve the new build.'
                bat 'nginx -s reload'  // Reload NGINX to serve the new content
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean workspace after the pipeline runs
        }
    }
}
