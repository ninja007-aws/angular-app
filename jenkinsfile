pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'node 18', type: 'NodeJSInstallation'
        PATH = "${env.node 18_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://gitlab.com/your-repo/your-project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Angular App') {
            steps {
                sh 'ng build --prod'
            }
        }

        stage('Deploy') {
            steps {
                sshPublisher(
                    publishers: [
                        sshPublisherDesc(
                            configName: 'YourServerConfig',
                            transfers: [
                                sshTransfer(
                                    sourceFiles: 'dist/**/*',
                                    remoteDirectory: '/var/www/html/your-angular-app'
                                )
                            ]
                        )
                    ]
                )
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
